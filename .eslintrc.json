{
	"root": true,
	"env": {
		"browser": true,
		"es2021": true
	},
	"plugins": [
		"@typescript-eslint"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"quotes": [
			"warn",
			"single"
		],
		"semi": "error"
	},
	"ignorePatterns": [
		"node_modules/",
		"*.test.ts"
	]
}
