{
	"manifest_version": 3,
	"permissions": [
		"storage",
		"unlimitedStorage",
		"tabs"
	],
	"icons": {
		"16": "extension-icon@16.png",
		"32": "extension-icon@32.png",
		"48": "extension-icon@48.png",
		"96": "extension-icon@96.png"
	},
	"default_locale": "ja",
	"content_scripts": [
		{
			"run_at": "document_idle",
			"matches": [
				"<all_urls>"
			],
			"js": [
				"page-content.js"
			]
		}
	],
	"action": {
		"default_icon": "extension-icon.svg",
		"default_title": "ptd",
		"default_popup": "popup-action.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"options_ui": {
		"open_in_tab": true,
		"page": "application-options.html"
	}
}
