{
	"name": "page-translation-dictionary",
	"version": "1.0.0",
	"description": "__MSG_we_description__",
	"main": "index.js",
	"scripts": {
		"test-watch-script": "jest --watchAll",
		"test:script": "jest --runInBand",
		"test": "npm-run-all --sequential test:script",
		"build:firefox": "webpack --mode=production --config=webpack.config.ts --env=browser=firefox",
		"watch:firefox": "webpack --watch --cache --mode=development --config=webpack.config.ts --env=browser=firefox",
		"browser:firefox": "web-ext run --source-dir=./dist --start-url about:debugging about:addons",
		"prebrowser:firefox-env": "mkdirp X:\\fx",
		"browser:firefox-env": "npm run browser:firefox -- --keep-profile-changes --firefox-profile=X:\\fx ",
		"debug:firefox": "npm run build:firefox && npm-run-all --parallel watch:firefox browser:firefox",
		"debug:firefox-env": "npm run build:firefox && npm-run-all --parallel watch:firefox browser:firefox-env",
		"lint:firefox": "web-ext lint --source-dir=./dist",
		"output:firefox": "cd dist && web-ext build",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sk-0520/page-translation-dictionary.git"
	},
	"author": "sk",
	"license": "WTFPL",
	"bugs": {
		"url": "https://github.com/sk-0520/page-translation-dictionary/issues"
	},
	"homepage": "https://github.com/sk-0520/page-translation-dictionary",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/source/test/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "coverage"
	},
	"devDependencies": {
		"@types/jest": "^29.2.0",
		"@types/webextension-polyfill": "^0.9.1",
		"@types/webpack": "^5.28.0",
		"cp-cli": "^2.0.0",
		"css-loader": "^6.7.1",
		"html-webpack-plugin": "^5.5.0",
		"jest": "^29.2.2",
		"jest-environment-jsdom": "^29.2.2",
		"jsonc-parser": "^3.2.0",
		"mkdirp": "^1.0.4",
		"normalize-sass": "^1.0.0",
		"normalize-scss": "^7.0.1",
		"npm-check-updates": "^16.3.15",
		"npm-run-all": "^4.1.5",
		"rimraf": "^3.0.2",
		"sass": "^1.55.0",
		"sass-loader": "^13.1.0",
		"style-loader": "^3.3.1",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"web-ext": "^7.3.1",
		"web-ext-types": "^3.2.1",
		"webextension-polyfill": "^0.10.0",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0"
	}
}
